{
  "name": "karabiner",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "build-karabiner": "cd ./.config/karabiner && yarn build",
    "link-nvim": "ln -s ~/Projects/karabiner/.config/nvim ~/.config/nvim",
    "link-tmux": "ln -s ~/Projects/karabiner/.config/tmux/tmux.conf ~/.config/tmux/tmux.conf",
    "link-lazygit": "ln -s ~/Projects/karabiner/.config/lazygit ~/.config/lazygit",
    "link-sketchybar": "ln -s ~/Projects/karabiner/.config/sketchybar ~/.config/sketchybar",
    "link-karabiner": "ln -s ~/Projects/karabiner/.config/karabiner ~/.config/karabiner",
    "replace-tmux": "cp tmux.conf ~/.config/tmux/tmux.conf",
    "replace-aerospace": "cp aerospace.toml ~/.config/aerospace/aerospace.toml",
    "replace-zshrc": "cp .zshrc ~/.zshrc",
    "replace-wezterm": "cp .wezterm.lua ~/.wezterm.lua",
    "replace-yazi": "cp -R .config/yazi/* ~/.config/yazi"
  }
}
